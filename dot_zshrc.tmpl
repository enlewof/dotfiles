# Add aliases
source $HOME/.aliases

# Add mfa functions
source $HOME/.mfa

# Add pet functions
source $HOME/.pet

# Add zsh completions and try to use cache for compinit
autoload -Uz compinit
ZSH_COMPDUMP=${ZSH_COMPDUMP:-${ZDOTDIR:-~}/.zcompdump}

# cache .zcompdump for about a day
if [[ $ZSH_COMPDUMP(#qNmh-20) ]]; then
  compinit -C -d "$ZSH_COMPDUMP"
else
  compinit -i -d "$ZSH_COMPDUMP"; touch "$ZSH_COMPDUMP"
fi
{
  # compile .zcompdump
  if [[ -s "$ZSH_COMPDUMP" && (! -s "${ZSH_COMPDUMP}.zwc" || "$ZSH_COMPDUMP" -nt "${ZSH_COMPDUMP}.zwc") ]]; then
    zcompile "$ZSH_COMPDUMP"
  fi
} &!

# Source antidote
source $(brew --prefix)/opt/antidote/share/antidote/antidote.zsh

# initialize plugins statically with ${ZDOTDIR:-~}/.zsh_plugins.txt
antidote load
{{ if eq .chezmoi.hostname "alew-mbp" }}
# Set Vault url
export VAULT_ADDR='https://vault.usw1.fanops.net'
{{ end }}
# Enable zsh spellcheck and make its prompt nicer
setopt correct
export SPROMPT="Correct $fg[red]%R$reset_color to $fg[green]%r?$reset_color (Yes, No, Abort, Edit) "

# Don't autoupgrade homebrew
export HOMEBREW_NO_AUTO_UPDATE=1

# Change SNIPKIT_HOME
export SNIPKIT_HOME="{{ .home}}/.config/snipkit"

# Add Zoxide
_evalcache zoxide init zsh

# Mise init
_evalcache mise activate zsh

# Add cargo apps to path
export PATH="$HOME/.cargo/bin:$PATH"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

